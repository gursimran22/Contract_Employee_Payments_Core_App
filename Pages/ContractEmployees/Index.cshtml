@page
@model Contract_Employee_Payments_Core_App.Pages.ContractEmployees.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Contract Employees</h1>

<p>
    <a class="btn btn-warning" asp-page="Create">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContractEmployee[0].Name)
            </th>
            <th>
               $ @Html.DisplayNameFor(model => model.ContractEmployee[0].HourlyRate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ContractEmployee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourlyRate)
            </td>
            <td>
                <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-warning" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a  class="btn btn-warning" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
